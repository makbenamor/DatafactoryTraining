{
	"name": "dataflow-user-defined-function",
	"properties": {
		"folder": {
			"name": "learn dataflow"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "employees",
						"type": "DatasetReference"
					},
					"name": "employees"
				}
			],
			"sinks": [
				{
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"udfLibraries": [
				{
					"referenceName": "library_mamor",
					"type": "DataFlowReference"
				}
			],
			"scriptLines": [
				"source(output(",
				"          name as string,",
				"          age as string,",
				"          sex as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> employees",
				"employees derive(reference = iif(sex=='male', 1, iif(sex=='female', 0, -1)),",
				"          functionreference = gender_values_integer(sex)) ~> derivedColumn1",
				"derivedColumn1 sink(validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     store: 'cache',",
				"     format: 'inline',",
				"     output: false,",
				"     saveOrder: 1) ~> sink1"
			]
		}
	}
}