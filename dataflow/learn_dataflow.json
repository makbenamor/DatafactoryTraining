{
	"name": "learn_dataflow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "races",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [],
			"scriptLines": [
				"source(output(",
				"          raceId as string,",
				"          year as string,",
				"          round as string,",
				"          circuitId as string,",
				"          name as string,",
				"          date as string,",
				"          time as string,",
				"          url as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     limit: 10000,",
				"     ignoreNoFilesFound: false) ~> source1"
			]
		}
	}
}